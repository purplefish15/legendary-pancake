/*Write a Program to find the sum of the digits of the Number and also reverse the number.*/
#include<stdio.h>
#include<math.h>
void main(){
    int n,d,num, sum=0, rev=0;
    printf("Enter a number: ");
    scanf("%d",&n);
    num=n;
    while(n>0){
        d=n%10;
        sum=sum+d;
        rev=rev*10+d;
        n=n/10;
    }
    printf("The sum of digits of %d is %d and reverse is %d. ",num,sum,rev);
}


