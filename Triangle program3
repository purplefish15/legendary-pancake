/*Program to create: 
          *
         * *
        * * * 
       * * * * ....upto n */

#include<stdio.h>
void main()
{
    int n;
    printf("\n Enter the number of rows: ");
    scanf("\n %d",&n);
    //printf("\n");
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n-i;j++)
        {
            printf(" ");
        }
        for(int k=1;k<=i;k++)
        {
            printf("* ");
        }
        printf("\n");
    }
}
