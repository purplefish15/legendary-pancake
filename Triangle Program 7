/*Write a program to generate the number triangle: 
      1
    2 3 2
  3 4 5 4 3
4 5 6 7 6 5 4 */
#include<stdio.h>
#include<math.h>
void main(){
    int l=0;
    for(int i=1;i<=4;i++){
        for(int space=8-i;space>0;space--){
            printf("  ");
        }
        for(int j=i;j<i+l;j++){
            printf("%d ",j);
        }
        for(int k=i+l;k>=i;k--){
            printf("%d ",k);
        }
        l++;
        printf("\n");
    }
}
