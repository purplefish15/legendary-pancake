/*Write a program to generate the number triangle: 
         1
        2 2
       3 3 3
      4 4 4 4. */
#include<stdio.h>
#include<math.h>
void main(){
    int k=1;
    for(int i=1;i<=4;i++){
        for(int space=4-i;space>0;space--){
            printf(" ");
        }
        for(int j=1;j<=i;j++){
            printf("%d ",k);
        }
        k++;
        printf("\n");
    }
}
