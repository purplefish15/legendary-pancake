/*WAP to store the name,roll number and marks in 3 subject of 'n' student using
structure.display the output in the form of maximum to minimum marks scorer.*/


#include<stdio.h>
struct details
{
    char name[50];
    int roll_no;
    struct
    {
        int sub1;
        int sub2;
        int sub3;
        int total;
        int gr;
        int low;
    }marks;
}student[50];
void main()
{
    int n;
    printf("\n Enter the number of students: ");
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        printf("\n Enter details for student %d. ",i+1);
        printf("\n Enter name: ");
        scanf("%s",&student[i].name);
        printf("\n Enter roll no: ");
        scanf("%d",&student[i].roll_no);
        printf("\n Enter marks for 3 subjects  : ");
        scanf("%d %d %d",&student[i].marks.sub1,&student[i].marks.sub2,&student[i].marks.sub3);
        student[i].marks.total= student[i].marks.sub1+ student[i].marks.sub2+ student[i].marks.sub3;
    }
    printf("\n NAME \t ROLL NO \t SUB1 \t\t SUB2 \t\t SUB3 \t\t TOTAL");
    for(int i=0;i<n;i++){
        printf(" \n %s \t\t %d \t\t %d \t\t %d \t\t %d \t\t %d", student[i].name, student[i].roll_no, student[i].marks.sub1, student[i].marks.sub2, student[i].marks.sub3, student[i].marks.total);
    }

    for(int i=0;i<n;i++){
        printf("\n FOR %s",student[i].name);
        if(student[i].marks.sub1>student[i].marks.sub2 && student[i].marks.sub1>student[i].marks.sub3)
        {
            printf("\n Greatest marks in SUB1: %d",student[i].marks.sub1);
            if(student[i].marks.sub2>student[i].marks.sub3)
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub3);
            }
            else 
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub2);
            }
        }
        else if(student[i].marks.sub2>student[i].marks.sub1 && student[i].marks.sub2>student[i].marks.sub3)
        {
            printf("\n Greatest marks in SUB2: %d",student[i].marks.sub2);
            if(student[i].marks.sub1>student[i].marks.sub3)
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub3);   
            }
            else
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub1);
            }
        }
        else if(student[i].marks.sub3>student[i].marks.sub1 && student[i].marks.sub3>student[i].marks.sub2)
        {
            printf("\n Greatest marks in SUB3: %d",student[i].marks.sub3);
            if(student[i].marks.sub1>student[i].marks.sub2)
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub2);   
            }
            else
            {
                printf("\n Lowest marks in SUB3: %d",student[i].marks.sub1);
            }
        }
    }
}
