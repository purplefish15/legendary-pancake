/*.     1
       2 2
      3 3 3
     4 4 4 4......upto n times.*/ 

#include<stdio.h>
void main()
{
    int n;
    printf("Enter the number of rows: ");
    scanf("%d",&n);
    int a=1;
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n-i;j++)
        {
            printf(" ");
        }
        for(int k=1;k<=i;k++)
        {
            printf("%d ",a);
        }
        a++;
        printf("\n");
    }
}
